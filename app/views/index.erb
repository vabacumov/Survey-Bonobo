<header>
  <div id="title_div">
    <h1 id="title">Survey Bonobo</h1>
  </div>

  <img id="header_img" src="/images/landingpage.png">

  <div id="scroll_to_new_survey">
    <h2>Create Survey....</h2>
    <form action="/surveys/new" method="get">
      <input id="create_survey_button" type="submit" value"Create Survey..">
    </form>
  </div>

</header>
<br>
<% if @new_survey == true %>
  <%= erb :new_survey %>
<% end %>

<div id="question_list">
  
</div>
<br>
<div id="finish_button">
  <button onclick="finishSurvey()">Finish</button>
</div>

<div id="surveylist">
  <% if @surveys %>
    <% if @surveys.count > 0 %>
      <% @surveys.each do |survey| %>
        <div class="survey_item">
          <span><%= survey.id %></span> <a href="/survey/<%= survey.id %>"><%= survey.title %></a>  <a href="/surveys/answers/<%= survey.id %>">Survey Results</a>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
